<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context="com.technologies.nuvac.billsuiterms.ItemsFragment">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="#30ffffff">
      <Spinner
          android:id="@+id/categorySpinner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/righteous_regular">
      </Spinner>
      <Button
          android:id="@+id/get_menu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="100dp"
          android:background="@drawable/button_shape1"
          android:fontFamily="@font/righteous_regular"
          android:text="Get Categories"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingRight="@dimen/activity_horizontal_margin"
           android:paddingLeft="@dimen/activity_horizontal_margin"
           android:paddingTop="@dimen/activity_vertical_margin"
           android:paddingBottom="@dimen/activity_vertical_margin"
           android:background="@null">
           <TextView
               android:id="@+id/menuItem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ems="5"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:textStyle="bold"
               android:fontFamily="@font/righteous_regular"
               android:text="Name"/>
           <TextView
               android:id="@+id/price_cat1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ems="5"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:fontFamily="@font/righteous_regular"
               android:text="Quarter"/>
           <TextView
               android:id="@+id/price_cat2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ems="5"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:fontFamily="@font/righteous_regular"
               android:text="Half"/>
           <TextView
               android:id="@+id/price_cat3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ems="5"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:fontFamily="@font/righteous_regular"
               android:text="Full"/>
       </LinearLayout>
    <ListView
        android:id="@+id/menuItem_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
    </ListView>
   </LinearLayout>

</FrameLayout>
