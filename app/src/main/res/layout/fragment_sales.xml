<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crop_hand_pouring_spices"
    tools:context="com.technologies.nuvac.billsuiterms.SalesFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20ffffff">
        <RelativeLayout
            android:id="@+id/Rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/saleFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:ems="4"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/righteous_regular"
                android:text="From"/>
            <TextView
                android:id="@+id/saleEdtFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/saleFrom"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:inputType="date"
                android:fontFamily="@font/righteous_regular"
                android:background="@drawable/edit_text_shape1"
                android:hint="From Date"/>
            <TextView
                android:id="@+id/saleTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/saleEdtFrom"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:ems="3"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/righteous_regular"
                android:text="To"/>
            <TextView
                android:id="@+id/saleEdtTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/saleTo"
                android:gravity="center"
                android:inputType="date"
                android:fontFamily="@font/righteous_regular"
                android:background="@drawable/edit_text_shape1"
                android:hint="To Date"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <Spinner
                android:id="@+id/saleSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/righteous_regular">

            </Spinner>
            <Button
                android:id="@+id/saleSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/saleSpinner"
                android:background="@drawable/button_shape1"
                android:fontFamily="@font/righteous_regular"
                android:text="Sales Details"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <RelativeLayout
                android:id="@+id/labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@null">
                <TextView
                    android:id="@+id/invoice_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold"
                    android:ems="4"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/righteous_regular"
                    android:text="Invoice"/>
                <TextView
                    android:id="@+id/amount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/invoice_label"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:ems="5"
                    android:fontFamily="@font/righteous_regular"
                    android:text="Amount"/>
                <TextView
                    android:id="@+id/status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/amount_label"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:ems="4"
                    android:fontFamily="@font/righteous_regular"
                    android:text="Status"/>
                <TextView
                    android:id="@+id/brand_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/status_label"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:ems="4"
                    android:fontFamily="@font/righteous_regular"
                    android:text="Staff ID"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/salesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/labels">

            </ListView>
            <ProgressBar
                android:id="@+id/progressSale"
                android:layout_below="@id/salesList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
