<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.technologies.nuvac.billsuiterms.VATHistoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:fontFamily="@font/righteous_regular"
            android:text="VAT HISTORY" />

        <RelativeLayout
            android:id="@+id/Rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txtFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/righteous_regular"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="From"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/vatFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtFrom"
                android:background="@drawable/edit_text_shape1"
                android:fontFamily="@font/righteous_regular"
                android:gravity="center"
                android:hint="FROM"
                android:inputType="date"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" />

            <TextView
                android:id="@+id/txtTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/vatFrom"
                android:fontFamily="@font/righteous_regular"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="To"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/vatTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtTo"
                android:background="@drawable/edit_text_shape1"
                android:fontFamily="@font/righteous_regular"
                android:gravity="center"
                android:hint="TO"
                android:inputType="date"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" />

            <Spinner
                android:id="@+id/getHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vatFrom"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/righteous_regular" />

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/buttonGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getHotel"
        android:layout_gravity="center"
        android:background="@drawable/button_shape1"
        android:fontFamily="@font/righteous_regular"
        android:text="Get VAT History" />
<HorizontalScrollView android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/labelTxn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:text="ID"
                    android:textColor="@color/white"
                    android:fontFamily="@font/righteous_regular"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="FROM"
                    android:textColor="@color/white"
                    android:fontFamily="@font/righteous_regular"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txtSubmittedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="TO"
                    android:textColor="@color/white"
                    android:fontFamily="@font/righteous_regular"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/txtDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="BRANCH"
                    android:textColor="@color/white"
                    android:fontFamily="@font/righteous_regular"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/txtResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="REG NO"
                    android:textColor="@color/white"
                    android:fontFamily="@font/righteous_regular"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="STATUS"
                    android:textColor="@color/white"
                    android:fontFamily="@font/righteous_regular"
                    android:textSize="15sp"/>

            </LinearLayout>

            <ListView
                android:id="@+id/vat_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

            </ListView>
        </LinearLayout>
</HorizontalScrollView>
</LinearLayout>
